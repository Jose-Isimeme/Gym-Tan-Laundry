          <input type="hidden" name="playListType" value="TAN">
          <label for="smallList">Small(5 songs)</label><br>
          <input type="radio" id="mediumListT" name="songListT" value="10" required>
          <label for="mediumList">Medium(10 songs)</label><br>
          <input type="radio" id="largeListT" name="songListT" value="15" required>
          <label for="largeList">Large(15 songs)</label><br>
        </form>
          <button type="submit" id="playlistSubmitButtonT">Submit</button>
        </div>
      </div>
    </div>
<!-- Modal for Laundry Below -->
    <div id="simpleModalL" class="modal">
      <div class="modal-content">
        <div class="modal-header">
          <span class="closeBtn">&times;</span>
          <h4>Select size of Playlist:</h4>
        </div>
        <div class="modal-body">
        <form method="POST" action="/modal-input"></form>
          <input type="radio" id="smallListL" name="songListL" value="5" required>
